<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lista de Usuarios</title>
    <link rel="stylesheet" href="/css/users/list_user.css" />
    <link rel="stylesheet" href="/css/user.css" />
  </head>
  <body>

    <%- include('../user.ejs') %>

    <main>
      <header>
        <h1>Lista de Contactos</h1>
        <nav>
          <a href="/users/create">Nuevo Contacto</a>
          <a href="/categories/create">Nueva Categoría</a>
        </nav>
      </header>

      <!-- Tabla para mostrar los usuarios -->
      <table id="userTable">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Edad</th>
            <th>Domicilio</th>
            <th>Sexo</th>
            <th>LinkedIn</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.filter(({isAdmin}) => !isAdmin).forEach(user => { %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user?.phone ?? "Indefinido" %></td>
            <td><%= user?.age ?? "Indefinido" %></td>
            <td><%= user?.address ?? "Indefinido" %></td>
            <td><%= user?.gender ?? "Indefinido" %></td>
            <td><a href="<%= user?.link ?? ""  %>" target="_blank"><%= user?.link ? "Perfil" : "Indefinido" %></a</td>
            <td><a href="/users/show/<%= user.id %>">Ver más</a></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <nav>
        <% if (page > 0 && users.length == 2) { %>
          <a href="/users/?page=<%= Number(page) - 1 %>">Anterior</a>
          <a href="/users/?page=<%= Number(page) + 1 %>">Siguiente</a>
          <% } else if (page == 0) { %>
            <a href="/users/?page=<%= Number(page) + 1 %>">Siguiente</a>
          <% } else { %>
            <a href="/users/?page=<%= Number(page) - 1 %>">Anterior</a>
          <% } %>
      </nav>
    </main>

    <script src="/js/users/user_list.js"></script>
  </body>
</html>
